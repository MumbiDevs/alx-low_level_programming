# 100-Makefile

# Variables
CC = gcc
SRC = main.c school.c
OBJ = main.o school.o
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

# Default target
all: $(NAME)

# Rule to link the object files to create the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to compile each .c file to a .o file individually
main.o: main.c m.h
	$(CC) -c main.c $(CFLAGS)

school.o: school.c m.h
	$(CC) -c school.c $(CFLAGS)

# Rule to remove the executable and temporary files
clean:
	$(RM) *~ $(NAME)

# Rule to remove only the object files
oclean:
	$(RM) $(OBJ)

# Rule to remove all generated files
fclean: clean oclean

# Rule to force recompilation of all source files
re: fclean all

# Phony targets to avoid conflicts with files named clean, oclean, fclean, or re
.PHONY: all clean oclean fclean re
